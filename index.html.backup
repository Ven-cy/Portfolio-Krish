<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Krish Kalola - Academic Portfolio</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Lucide Icons CDN -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <!-- Devicon CDN for tech logos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
    <!-- Inter font for modern, clean typography -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    
    <script>
        // Custom Tailwind configuration
        tailwind.config = {
            darkMode: 'class', // Enable class-based dark mode
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        // Using Indigo as the primary color
                        primary: {
                            '50': '#eef2ff',
                            '100': '#e0e7ff',
                            '200': '#c7d2fe',
                            '300': '#a5b4fc',
                            '400': '#818cf8',
                            '500': '#6366f1',
                            '600': '#4f46e5',
                            '700': '#4338ca',
                            '800': '#3730a3',
                            '900': '#312e81',
                            '950': '#1e1b4b',
                        },
                        // Custom dark theme colors
                        gray: {
                            '50': '#f9fafb',
                            '100': '#f3f4f6',
                            '200': '#e5e7eb',
                            '300': '#d1d5db',
                            '400': '#9ca3af',
                            '500': '#6b7280',
                            '600': '#4b5563',
                            '700': '#374151',
                            '800': '#1f2937',
                            '900': '#111827',
                            '950': '#030712',
                        }
                    },
                },
            },
        };
    </script>
    <style>
        /* Custom styles for active nav link and scroll padding */
        html {
            scroll-behavior: smooth;
        }
        /* Add top margin to sections to offset the fixed header */
        section {
            scroll-margin-top: 72px; /* Adjust based on header height */
        }
        /* Style for the active navigation link */
        .nav-link.active {
            color: #6366f1; /* primary-500 */
            font-weight: 600;
            position: relative;
        }
        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: 4px;
            left: 12px;
            right: 12px;
            height: 2px;
            background: linear-gradient(90deg, #6366f1, #818cf8);
            border-radius: 2px;
            animation: slideIn 0.3s ease;
        }
        /* Dark mode active link */
        .dark .nav-link.active {
            color: #a5b4fc; /* primary-300 */
        }
        .dark .nav-link.active::after {
            background: linear-gradient(90deg, #a5b4fc, #c7d2fe);
        }

        /* Enhanced animation for section fade-in */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px) scale(0.98); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }
        @keyframes slideIn {
            from { width: 0; }
            to { width: calc(100% - 24px); }
        }
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        @keyframes shimmer {
            0% { background-position: -1000px 0; }
            100% { background-position: 1000px 0; }
        }
        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .fade-in-section {
            animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }
        
        /* Enhanced gradient background for home section */
        #home {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            position: relative;
            overflow: hidden;
        }
        #home::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.4), transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.4), transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.3), transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            z-index: 0;
        }
        .dark #home {
            background: linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #1e1b4b 100%);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        .dark #home::before {
            background-image: 
                radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.5), transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.5), transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.4), transparent 50%);
        }

        /* Enhanced Glassmorphism card style */
        .glass-card {
            /* Light mode glass effect */
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.4));
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            border: 1px solid rgba(255, 255, 255, 0.6);
            box-shadow: 
                0 8px 32px 0 rgba(31, 38, 135, 0.15),
                0 0 0 1px rgba(255, 255, 255, 0.2) inset,
                0 0 60px rgba(99, 102, 241, 0.1);
            border-radius: 1.5rem;
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        }
        .glass-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.5s;
        }
        .glass-card:hover::before {
            left: 100%;
        }
        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 
                0 12px 40px 0 rgba(31, 38, 135, 0.2),
                0 0 0 1px rgba(255, 255, 255, 0.3) inset,
                0 0 80px rgba(99, 102, 241, 0.15);
        }
        .dark .glass-card {
            /* Dark mode overrides */
            background: linear-gradient(135deg, rgba(17, 24, 39, 0.7), rgba(31, 41, 55, 0.4));
            border-color: rgba(255, 255, 255, 0.1);
            box-shadow: 
                0 8px 32px 0 rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset,
                0 0 60px rgba(99, 102, 241, 0.2);
        }
        .dark .glass-card:hover {
            box-shadow: 
                0 12px 40px 0 rgba(0, 0, 0, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.15) inset,
                0 0 80px rgba(99, 102, 241, 0.3);
        }
        .dark .glass-card::before {
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        }

        /* Devicon icon color override */
        .devicon-plain {
            color: #6366f1; /* primary-500 */
            transition: transform 0.3s, filter 0.3s;
        }
        .dark .devicon-plain {
             color: #a5b4fc; /* primary-300 */
        }

        /* Enhanced skill badges */
        .skill-badge {
            position: relative;
            overflow: hidden;
        }
        .skill-badge::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(99,102,241,0.1), rgba(139,92,246,0.1));
            opacity: 0;
            transition: opacity 0.3s;
            border-radius: inherit;
        }
        .skill-badge:hover::before {
            opacity: 1;
        }
        .skill-badge:hover i {
            transform: scale(1.2) rotate(5deg);
            filter: drop-shadow(0 4px 8px rgba(99,102,241,0.4));
        }

       /* Ensure Inter is used even if Tailwind config isn't applied immediately */
       body { font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; }

        /* -----------------------------
           Hero: photo + info layout
           ----------------------------- */
        .hero-container {
            position: relative;
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
            align-items: center;
        }

        @media (min-width: 768px) {
            .hero-container {
                grid-template-columns: 380px 1fr;
            }
        }

        .profile-photo-wrap {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            perspective: 1200px; /* for 3D card effect */
        }

        .profile-card {
            width: 320px;
            max-width: 100%;
            border-radius: 2rem;
            overflow: hidden;
            transform-style: preserve-3d;
            transition: all 500ms cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 
                0 20px 60px rgba(99, 102, 241, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.2) inset,
                0 0 100px rgba(99, 102, 241, 0.2);
            background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(245,246,250,0.8));
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            border: 2px solid rgba(255, 255, 255, 0.5);
            position: relative;
            animation: float 6s ease-in-out infinite;
        }
        .profile-card::before {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: 2rem;
            padding: 2px;
            background: linear-gradient(45deg, #6366f1, #8b5cf6, #3b82f6, #6366f1);
            background-size: 300% 300%;
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            animation: gradient 3s ease infinite;
            opacity: 0;
            transition: opacity 0.3s;
            z-index: -1;
        }
        .profile-card:hover::before {
            opacity: 1;
        }

        .profile-card img {
            display: block;
            width: 100%;
            height: auto;
            object-fit: cover;
            transition: transform 500ms cubic-bezier(0.16, 1, 0.3, 1);
            filter: brightness(1.05) contrast(1.05);
        }

        .profile-card:hover {
            transform: translateY(-12px) rotateX(5deg) rotateY(8deg) scale(1.05);
            box-shadow: 
                0 40px 80px rgba(99, 102, 241, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.3) inset,
                0 0 120px rgba(99, 102, 241, 0.3);
            animation: none;
        }
        .profile-card:hover img {
            transform: scale(1.1);
        }

        .hero-info {
            padding: 0 1rem;
        }

        .hero-title {
            font-size: clamp(1.6rem, 3.6vw, 3rem);
            line-height: 1.02;
            margin-bottom: 0.25rem;
            background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 2px 20px rgba(255,255,255,0.3);
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
        }
        .dark .hero-title {
            background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-sub {
            color: rgba(255,255,255,0.9);
            margin-bottom: 1rem;
            font-size: 1.1rem;
            font-weight: 500;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }
        .dark .hero-sub {
            color: rgba(243,244,246,0.9);
        }

        .tagline {
            font-style: italic;
            color: rgba(255,255,255,0.95);
            margin-bottom: 1.25rem;
            font-size: 1.15rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
            line-height: 1.6;
        }
        .dark .tagline {
            color: rgba(249,250,251,0.95);
        }

        /* Social glass cards */
        .social-cards {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            align-items: center;
        }

        .social-card {
            width: 160px;
            height: 120px;
            border-radius: 20px;
            background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(249,250,251,0.7));
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            backdrop-filter: blur(20px) saturate(180%);
            border: 2px solid rgba(255,255,255,0.6);
            box-shadow: 
                0 10px 30px rgba(99, 102, 241, 0.2),
                0 0 0 1px rgba(255, 255, 255, 0.3) inset,
                0 0 40px rgba(99, 102, 241, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transform-style: preserve-3d;
            transition: all 500ms cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .social-card .label { 
            font-weight: 700; 
            color: #111827; 
            font-size: 1rem;
            z-index: 1;
            transition: color 0.3s;
        }
        .social-card .handle { 
            font-size: 0.85rem; 
            color: #6b7280; 
            z-index: 1;
            transition: color 0.3s;
        }

        .social-card::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(99,102,241,0.1), rgba(139,92,246,0.1));
            opacity: 0;
            transition: opacity 0.4s;
            z-index: 0;
        }

        .social-card::after {
            content: '';
            position: absolute;
            inset: -50%;
            background: conic-gradient(from 0deg, transparent, rgba(99,102,241,0.3), transparent 30%);
            transform: rotate(0deg);
            transition: transform 1s linear;
            pointer-events: none;
            z-index: 0;
        }

        .social-card:hover::before {
            opacity: 1;
        }

        .social-card:hover::after {
            transform: rotate(360deg);
        }

        .social-card:hover {
            transform: translateY(-16px) rotateX(8deg) rotateY(8deg) scale(1.08);
            box-shadow: 
                0 30px 60px rgba(99,102,241,0.35),
                0 0 0 1px rgba(255,255,255,0.4) inset,
                0 0 80px rgba(99,102,241,0.25);
            background: linear-gradient(135deg, rgba(99,102,241,0.15), rgba(255,255,255,0.8));
            border-color: rgba(99,102,241,0.4);
        }
        .social-card:hover .label,
        .social-card:hover .handle {
            color: #6366f1;
        }
        .social-card:hover svg {
            filter: drop-shadow(0 8px 16px rgba(99,102,241,0.4));
        }

        .social-card.flip {
            transform: rotateY(180deg);
        }

        .dark .social-card {
            background: linear-gradient(135deg, rgba(17,24,39,0.9), rgba(31,41,55,0.7));
            border-color: rgba(255,255,255,0.1);
            box-shadow: 
                0 10px 30px rgba(0,0,0,0.3),
                0 0 0 1px rgba(255,255,255,0.1) inset,
                0 0 40px rgba(99,102,241,0.2);
        }
        .dark .social-card .label { color: #f9fafb; }
        .dark .social-card .handle { color: #9ca3af; }
        .dark .social-card:hover {
            background: linear-gradient(135deg, rgba(99,102,241,0.2), rgba(17,24,39,0.9));
            border-color: rgba(99,102,241,0.5);
        }
        .dark .social-card:hover .label,
        .dark .social-card:hover .handle {
            color: #a5b4fc;
        }

        /* Animated blurred blobs behind hero */
        .hero-blobs {
            position: absolute;
            inset: 0;
            pointer-events: none;
            overflow: visible;
            z-index: 0;
        }

        .blob {
            position: absolute;
            filter: blur(60px) saturate(150%);
            opacity: 0.6;
            transform: translate3d(0,0,0);
            will-change: transform, opacity;
            transition: transform 700ms ease, opacity 700ms ease;
            border-radius: 50%;
        }

        .blob.b1 { 
            width: 400px; 
            height: 400px; 
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            left: -8%; 
            top: -6%;
            animation: floaty 12s ease-in-out infinite, pulse 6s ease-in-out infinite;
        }
        .blob.b2 { 
            width: 320px; 
            height: 320px; 
            background: linear-gradient(135deg, #06b6d4, #3b82f6);
            right: -6%; 
            top: 18%;
            animation: floaty 10s ease-in-out infinite reverse, pulse 8s ease-in-out infinite;
            animation-delay: 1s;
        }
        .blob.b3 { 
            width: 360px; 
            height: 360px; 
            background: linear-gradient(135deg, #f472b6, #ec4899);
            left: 30%; 
            bottom: -12%;
            animation: floaty 14s ease-in-out infinite, pulse 7s ease-in-out infinite;
            animation-delay: 2s;
        }

        @keyframes floaty {
            0% { transform: translateY(0) translateX(0) scale(1); }
            33% { transform: translateY(-30px) translateX(20px) scale(1.1); }
            66% { transform: translateY(10px) translateX(-15px) scale(0.95); }
            100% { transform: translateY(0) translateX(0) scale(1); }
        }

        /* Small particle canvas sits on top of blobs */
        .particles-canvas {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        /* Dynamic background gradient (subtle motion) */
        .dynamic-gradient {
            position: absolute;
            inset: 0;
            z-index: 0;
            background: linear-gradient(120deg, rgba(99,102,241,0.1), rgba(6,182,212,0.08) 30%, rgba(244,114,182,0.06));
            background-size: 400% 400%;
            animation: gradientShift 14s ease infinite;
            pointer-events: none;
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Micro-interactions: social icon pulses and active states */
        .social-card svg { transition: transform 220ms cubic-bezier(.2,.9,.3,1), filter 200ms; }
        .social-card:active { transform: translateY(-4px) scale(0.995); }
        .social-card:hover svg { transform: scale(1.08) translateY(-2px); filter: drop-shadow(0 6px 18px rgba(99,102,241,0.12)); }
        .social-card:focus { outline: 2px solid rgba(99,102,241,0.18); outline-offset: 4px; }

        /* Glow effect when hovering */
        .social-card:hover::after { transform: rotate(12deg) translateY(-6px); opacity: 0.95; }

        /* Hero parallax transform target */
        .hero-container { transition: transform 600ms cubic-bezier(.2,.9,.3,1); }

        /* Entrance animations for major blocks (works with IntersectionObserver adding .fade-in-section) */
        .fade-in-section { animation: fadeIn 800ms cubic-bezier(.2,.9,.3,1) both; }

        /* Reduce heavy effects on touch devices for performance */
        @media (hover: none) and (pointer: coarse) {
            .social-card, .profile-card, .project-card { transition: none; }
            .blob { animation: none; }
            .particles-canvas { display: none; }
            .hero-container { transform: none !important; }
        }

        /* Project card improvements */
        .projects-grid { display: grid; grid-template-columns: 1fr; gap: 1.5rem; }
        @media(min-width:1024px){ .projects-grid { grid-template-columns: repeat(2, 1fr); } }

        .project-card {
            border-radius: 1.5rem;
            overflow: hidden;
            background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(248,250,252,0.8));
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            border: 2px solid rgba(255,255,255,0.6);
            box-shadow: 
                0 10px 40px rgba(99, 102, 241, 0.15),
                0 0 0 1px rgba(255,255,255,0.3) inset,
                0 0 60px rgba(99, 102, 241, 0.1);
            transition: all 500ms cubic-bezier(0.16, 1, 0.3, 1);
            display: flex;
            flex-direction: column;
            position: relative;
        }
        .project-card::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 1.5rem;
            padding: 2px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6, #3b82f6);
            background-size: 200% 200%;
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            opacity: 0;
            transition: opacity 0.4s;
            z-index: -1;
            animation: gradient 3s ease infinite;
        }

        .project-media { 
            position: relative; 
            height: 240px; 
            overflow: hidden;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }
        .project-media img { 
            width:100%; 
            height:100%; 
            object-fit:cover; 
            display:block; 
            transition: transform 700ms cubic-bezier(0.16, 1, 0.3, 1);
            filter: brightness(0.9) contrast(1.1);
        }
        .project-media .overlay {
            position:absolute; 
            inset:0; 
            display:flex; 
            flex-direction:column; 
            justify-content:flex-end; 
            padding:1.5rem; 
            background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.7) 100%); 
            color: #fff;
            z-index: 1;
        }
        .project-tags { 
            display:flex; 
            gap:0.5rem; 
            flex-wrap:wrap; 
            margin-top:0.75rem; 
        }
        .project-tag { 
            background: rgba(255,255,255,0.25); 
            padding:0.4rem 0.8rem; 
            border-radius:999px; 
            font-size:0.75rem; 
            font-weight:600;
            color:#fff; 
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            transition: all 0.3s;
        }
        .project-tag:hover {
            background: rgba(255,255,255,0.4);
            transform: scale(1.05);
        }

        .project-body { 
            padding:1.5rem; 
            display:flex; 
            flex-direction:column; 
            gap:0.75rem; 
            background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(248,250,252,0.8));
        }
        .project-body h3 { 
            margin:0; 
            color: #0f172a; 
            font-size:1.25rem;
            font-weight:700;
        }
        .project-body p { 
            margin:0; 
            color: #374151; 
            line-height:1.6;
        }

        .project-actions { 
            display:flex; 
            gap:0.75rem; 
            margin-top:0.5rem; 
        }
        .project-cta { 
            padding:0.65rem 1.2rem; 
            border-radius:12px; 
            font-weight:600; 
            font-size:0.9rem;
            text-decoration:none; 
            color:#fff; 
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
