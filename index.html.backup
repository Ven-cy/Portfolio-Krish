    <script>
        // Immediately replace icons on load and re-initialize after DOM changes
        function initializeIcons() {
            lucide.createIcons();
        }
        initializeIcons();
        
        // Re-initialize icons after page load to ensure all icons are rendered
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(initializeIcons, 100);
        });

        /* --- Interactive hero: particles, blob parallax, and social card tilt/flip --- */
        (function(){
            // Particles on canvas
            const canvas = document.getElementById('particles-canvas');
            const home = document.getElementById('home');
            let ctx, particles = [], w=0,h=0, rafId;

            function initCanvas(){
                if(!canvas || !home) return;
                ctx = canvas.getContext('2d');
                resize();
                createParticles();
                cancelAnimationFrame(rafId);
                rafId = requestAnimationFrame(loop);
            }

            function resize(){
                w = canvas.width = home.clientWidth;
                h = canvas.height = home.clientHeight;
            }

            function createParticles(){
                particles = [];
                const count = Math.max(20, Math.floor((w*h)/60000));
                for(let i=0;i<count;i++){
                    particles.push({
                        x: Math.random()*w,
                        y: Math.random()*h,
                        r: 1 + Math.random()*3,
                        vx: (Math.random()-0.5)*0.3,
                        vy: (Math.random()-0.5)*0.3,
                        alpha: 0.08 + Math.random()*0.15
                    });
                }
            }

            function loop(){
                ctx.clearRect(0,0,w,h);
                for(let p of particles){
                    p.x += p.vx; p.y += p.vy;
                    if(p.x < -10) p.x = w + 10;
                    if(p.x > w + 10) p.x = -10;
                    if(p.y < -10) p.y = h + 10;
                    if(p.y > h + 10) p.y = -10;
                    ctx.beginPath();
                    const gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.r);
                    gradient.addColorStop(0, `rgba(255,255,255,${p.alpha * 1.5})`);
                    gradient.addColorStop(0.5, `rgba(99,102,241,${p.alpha})`);
                    gradient.addColorStop(1, `rgba(99,102,241,0)`);
                    ctx.fillStyle = gradient;
                    ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
                    ctx.fill();
                }
                rafId = requestAnimationFrame(loop);
            }

            // Blob parallax
            const blobs = document.querySelectorAll('.blob');
            function handlePointer(e){
                const rect = home.getBoundingClientRect();
                const cx = rect.left + rect.width/2;
                const cy = rect.top + rect.height/2;
                    const px = (e.clientX - cx) / rect.width;
                    const py = (e.clientY - cy) / rect.height;
                    // Hero parallax: move hero container and profile slightly for depth
                    const heroContainer = document.querySelector('.hero-container');
                    if (heroContainer) {
                        const txHero = px * 12; // subtle horizontal shift
                        const tyHero = py * 10; // subtle vertical shift
                        heroContainer.style.transform = `translate3d(${txHero}px, ${tyHero}px, 0)`;
                    }
                    const profile = document.querySelector('.profile-card');
                    if (profile) {
                        const txP = px * 10;
                        const tyP = py * 8;
                        profile.style.transform = `translate3d(${txP}px, ${tyP}px, 0) rotateY(${px*3}deg)`;
                    }
                    blobs.forEach((b, i) => {
                        const depth = (i+1) * 6; // different depth per blob
                        const tx = px * depth;
                        const ty = py * depth;
                        b.style.transform = `translate3d(${tx}px, ${ty}px, 0) rotate(${i*6}deg)`;
                    });
            }

            // Social card tilt and flip
            document.querySelectorAll('.social-card').forEach(card => {
                card.addEventListener('mousemove', (ev) => {
                    const r = card.getBoundingClientRect();
                    const px = (ev.clientX - r.left) / r.width - 0.5;
                    const py = (ev.clientY - r.top) / r.height - 0.5;
                    const rotY = px * 10; // degrees
                    const rotX = -py * 8;
                    card.style.transform = `translateY(-8px) rotateX(${rotX}deg) rotateY(${rotY}deg) scale(1.03)`;
                });
                card.addEventListener('mouseleave', () => {
                    card.style.transform = '';
                });
                // flip on click (touch friendly)
                card.addEventListener('click', (e) => {
                    e.currentTarget.classList.toggle('flip');
                });
            });

                // Project card tilt (gentle) for desktop
                document.querySelectorAll('.project-card').forEach(card => {
                    card.addEventListener('mousemove', (ev) => {
                        const r = card.getBoundingClientRect();
                        const px = (ev.clientX - r.left) / r.width - 0.5;
                        const py = (ev.clientY - r.top) / r.height - 0.5;
                        const rotY = px * 6; // degrees
                        const rotX = -py * 4;
                        card.style.transform = `translateY(-8px) rotateX(${rotX}deg) rotateY(${rotY}deg) scale(1.01)`;
                    });
                    card.addEventListener('mouseleave', () => {
                        card.style.transform = '';
                    });
                    // keyboard focus tilt reset
                    card.addEventListener('blur', () => { card.style.transform = ''; });
                });

            // Initialize and bind events
            window.addEventListener('resize', () => { resize(); createParticles(); });
            window.addEventListener('mousemove', (e) => { if(home) handlePointer(e); });
            // For touchmove on mobile: gentle parallax
            window.addEventListener('touchmove', (e) => { if(e.touches && e.touches[0]) handlePointer(e.touches[0]); }, {passive:true});

            // Kick off
            initCanvas();
        })();

        // --- Theme Toggling (Dark/Light Mode) ---
        const themeToggle = document.getElementById('theme-toggle');
        const htmlEl = document.documentElement;

        // On page load, default to dark unless light is saved
        if (localStorage.getItem('theme') === 'light') {
            htmlEl.classList.remove('dark');
        } else {
            htmlEl.classList.add('dark');
        }

        themeToggle.addEventListener('click', () => {
            if (htmlEl.classList.contains('dark')) {
                htmlEl.classList.remove('dark');
                localStorage.setItem('theme', 'light');
            } else {
                htmlEl.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            }
            // Re-trigger icon creation
            lucide.createIcons();
        });

        // --- Mobile Menu Toggle ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu when a link is clicked
        mobileMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });

        // --- Active Nav Link & Fade-in on Scroll (Intersection Observer) ---
        const sections = document.querySelectorAll('section');
        const navLinks = document.querySelectorAll('.nav-link');

        const sectionObserverOptions = {
            root: null, // observes interactions with the viewport
            rootMargin: '0px',
            threshold: 0.4  // 40% of the section must be visible
        };

        const sectionObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Get the id of the intersecting section
                    const sectionId = entry.target.id;
                    
                    // Remove 'active' from all nav links
                    navLinks.forEach(link => {
                        link.classList.remove('active');
                    });

                    // Add 'active' to the corresponding nav link
                    document.querySelectorAll(`.nav-link[data-section="${sectionId}"]`).forEach(link => {
                        link.classList.add('active');
                    });
                    
                    // Add fade-in animation
                    entry.target.classList.add('fade-in-section');
                }
            });
        }, sectionObserverOptions);

        // Observe each section
        sections.forEach(section => {
            sectionObserver.observe(section);
        });

    </script>
